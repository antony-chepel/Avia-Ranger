<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bg_av_ranger"
    android:layout_height="match_parent"
    tools:context=".Xoxpxisudys">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:text="Find more avia planes and become real ranger!"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/cardView"
        android:layout_width="300dp"
        android:layout_height="450dp"
        app:cardCornerRadius="15dp"
        app:strokeColor="@color/av_rang_stroke"
        app:strokeWidth="4dp"
        app:cardBackgroundColor="@color/bg_crd_av"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:layout_constraintVertical_bias="0.13">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="match_parent">

            <ImageView
                android:id="@+id/dopdsokf"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="24dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_av_rang" />

            <ImageView
                android:id="@+id/zozozzijxxuzh"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintBottom_toBottomOf="@+id/dopdsokf"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="@+id/dopdsokf"
                app:srcCompat="@drawable/bg_av_rang" />

            <ImageView
                android:id="@+id/siosjsijd"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/dopdsokf"
                app:layout_constraintStart_toStartOf="@+id/dopdsokf"
                app:layout_constraintTop_toBottomOf="@+id/dopdsokf"
                app:srcCompat="@drawable/bg_av_rang" />

            <ImageView
                android:id="@+id/kciocjvji"
                android:layout_width="120dp"
                android:layout_height="120dp"

                app:layout_constraintEnd_toEndOf="@+id/zozozzijxxuzh"
                app:layout_constraintStart_toStartOf="@+id/zozozzijxxuzh"
                app:layout_constraintTop_toTopOf="@+id/siosjsijd"
                app:srcCompat="@drawable/bg_av_rang" />

            <ImageView
                android:id="@+id/fofkokggf"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="16dp"
                app:layout_constraintEnd_toEndOf="@+id/siosjsijd"
                app:layout_constraintStart_toStartOf="@+id/siosjsijd"
                app:layout_constraintTop_toBottomOf="@+id/siosjsijd"
                app:srcCompat="@drawable/bg_av_rang" />

            <ImageView
                android:id="@+id/ockcvchuvcu"
                android:layout_width="120dp"
                android:layout_height="120dp"
                app:layout_constraintBottom_toBottomOf="@+id/fofkokggf"
                app:layout_constraintEnd_toEndOf="@+id/kciocjvji"
                app:layout_constraintTop_toTopOf="@+id/fofkokggf"
                app:srcCompat="@drawable/bg_av_rang" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <androidx.cardview.widget.CardView
        android:layout_width="250dp"
        android:layout_height="70dp"
        app:cardCornerRadius="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cardView" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:background="@color/av_rang_stroke"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cixcjvji"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Found Avia : 0"
                android:textStyle="bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>


</androidx.constraintlayout.widget.ConstraintLayout>